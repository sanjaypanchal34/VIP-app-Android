<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_rect_btn"
    android:minHeight="@dimen/_250sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_5sdp">

        <com.vip.marrakech.customs.ToolBarTitleTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/calender"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="?subHeading" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_clear"
            android:tint="@color/blue" />
    </RelativeLayout>

    <com.vip.marrakech.customs.calender.CustomCalenderView
        android:id="@+id/custom_calender"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_weight="1" />


</LinearLayout>