<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ln_notification"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/_24sdp"
            android:id="@+id/iv_bell"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_height="@dimen/_24sdp"
            android:padding="@dimen/_3sdp"
            app:actualImageResource="@drawable/ic_green_notification"
            app:actualImageScaleType="fitCenter"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:id="@+id/tv_title"
            android:text="XYZ restaurant booking"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="end"
        android:textColor="#00a651"
        android:paddingVertical="@dimen/_3sdp"

        android:paddingHorizontal="@dimen/_10sdp"
        android:textSize="?small"
        android:id="@+id/tv_time"
        android:drawableStart="@drawable/ic_watch_10"
        android:text="10m ago"
        android:drawablePadding="@dimen/_5sdp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorPrimary"/>
</LinearLayout>