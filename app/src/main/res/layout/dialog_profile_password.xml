<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    app:contentPadding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/ic_lock_fill"
            android:tint="@color/blue" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/lite_grey_rect"
            android:drawableStart="@drawable/ic_lock_outline_grey"
            android:drawablePadding="@dimen/_10sdp"
            android:id="@+id/edt_password"
            android:hint="@string/password"
            android:textCursorDrawable="@drawable/black_blue"
            android:inputType="textPassword"
            android:padding="@dimen/_5sdp"
            android:textSize="?normal" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/blue_rect"
            android:text="@string/ok"
            android:id="@+id/btn_confirm"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_50sdp"
            android:textSize="?normal"/>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_clear"
        android:tint="@color/blue"
        android:id="@+id/iv_close"
        android:layout_gravity="end"/>
</androidx.cardview.widget.CardView>