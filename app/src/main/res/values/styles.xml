<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="heading">@dimen/_18ssp</item>
        <item name="normal">@dimen/_10ssp</item>
        <item name="button">@dimen/_12ssp</item>
        <item name="small">@dimen/_8ssp</item>
        <item name="subHeading">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="fontFamily">@font/font</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="editTextColor">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="actionMenuTextColor">@color/user_itinerary_tab_selected</item>
        <item name="android:actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
        <item name="buttonStyle">@style/AceButtonStyle</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:buttonStyle">@style/AceButtonStyle</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="dialog_theme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
        <item name="android:drawablePadding">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.FullScreen2" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AceTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/font</item>
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="AceButtonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/font</item>
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="AceEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/font</item>
        <item name="fontFamily">@font/font</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AceCheckboxtStyle" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/font</item>

        <item name="fontFamily">@font/font</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:fontFamily">@font/font</item>
    </style>


    <style name="MyCustomTextAppearanceUser" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/font</item>
    </style>


    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="checkBoxStyle1" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>


    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
    </style>
    <style name="AppTheme.blueAccent">
        <item name="colorAccent">@color/blue</item> <!-- Whatever color you want-->
    </style>

    <style name="AppTheme.SeekBar">
        <item name="colorAccent">@color/white</item> <!-- Whatever color you want-->
    </style>

</resources>
